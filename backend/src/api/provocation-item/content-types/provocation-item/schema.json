{
  "kind": "collectionType",
  "collectionName": "provocation_items",
  "info": {
    "singularName": "provocation-item",
    "pluralName": "provocation-items",
    "displayName": "Provocation Item",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "subtitle": {
      "type": "string"
    },
    "author": {
      "type": "string"
    },
    "body": {
      "type": "blocks"
    },
    "lead": {
      "type": "text"
    },
    "author_about": {
      "type": "text"
    },
    "author_img": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "order": {
      "type": "integer",
      "default": 0
    },
    "color": {
      "type": "customField",
      "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$",
      "customField": "plugin::color-picker.color"
    },
    "long_author_about": {
      "type": "blocks"
    },
    "url_title": {
      "type": "string"
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "standard",
        "interview",
        "cases",
        "popout"
      ],
      "default": "standard"
    }
  }
}
